<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- 主题色 -->
    <SolidColorBrush x:Key="MainColor" Color="#007ACC"/>
    <!-- 主题色附属 -->
    <SolidColorBrush x:Key="LightMainColor" Color="#AA007ACC" />
    <!-- 背景颜色 -->
    <SolidColorBrush x:Key="BackColor" Color="#F0F0F0" />
    
    <!-- 线框颜色 -->
    <SolidColorBrush x:Key="LineColor" Color="LightGray" />
</ResourceDictionary>