<Window x:Class="LF.Figure.Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LF.Figure.Project"
        xmlns:figure="clr-namespace:LF.Figure;assembly=LF.Figure"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        
        <figure:LFChartFigure  Grid.Row="1" BorderBrush="LightGray" BorderThickness="1" Margin="10" 
                               Title="Title" XTitle="x" YTitle="Y">
        </figure:LFChartFigure>
    </Grid>
</Window>
